<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_linearlayout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_button">
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_text_edit">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>

    </style>

    <style name="style_text_input_layout">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="hintAnimationEnabled">true</item>

    </style>

    <style name="style_text_view">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">14sp</item>

    </style>


</resources>