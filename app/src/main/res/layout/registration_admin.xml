<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/email_xml"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Номер телефону (+38__)"/>

    <EditText
        android:layout_below="@+id/email_xml"
        android:id="@+id/name_xml"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name Firm"/>

    <EditText
        android:layout_below="@id/name_xml"
        android:id="@+id/password_xml"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"/>

    <Spinner
        android:layout_below="@id/password_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/role_xml"/>

    <Button
        android:layout_below="@id/role_xml"
        android:id="@+id/register_xml"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="register"/>


</RelativeLayout>